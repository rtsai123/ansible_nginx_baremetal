server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: "{{ log_forwarding_positions_file }}"

clients:
  - url: "{{ log_forwarding_loki_url }}"

scrape_configs:
  - job_name: nginx
    static_configs:
      - targets:
          - localhost
        labels:
          job: nginx
          host: "{{ ansible_hostname }}"
          __path__: /var/log/nginx/access.log
